{
  "name": "@shoutem/api",
  "version": "0.1.4",
  "description": "SDK for Shoutem API",
  "main": "build/lib/index.js",
  "files": [
    "build/lib"
  ],
  "author": "Shoutem",
  "scripts": {
    "clean": "rimraf ./build/*",
    "build": "npm run clean && npm run build-lib && npm run build-production-script && npm run build-develop-script",
    "build-production-script": "webpack --config ./bin/webpack.prod.config.js",
    "build-develop-script": "webpack --config ./bin/webpack.dev.config.js",
    "build-lib": "babel src --out-dir build/lib --copy-files",
    "lint": "eslint src test"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-core": "^6.9.1",
    "babel-eslint": "^6.0.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-lodash": "^3.2.11",
    "babel-plugin-transform-runtime": "^6.3.13",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.9.0",
    "eslint": "^2.13.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-flow-vars": "^0.4.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^1.3.0",
    "eslint-plugin-react": "^5.1.1",
    "lodash-webpack-plugin": "^0.11.0",
    "rimraf": "^2.5.2",
    "webpack": "^1.8.4"
  },
  "dependencies": {
    "@shoutem/redux-io": "^0.2.13",
    "es6-promise": "^4.0.5",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.4"
  }
}
